<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaProject</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@40,300,0,-25" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@splidejs/splide@4.0.1/dist/css/splide.min.css" />
</head>
@{
    var user = User.Identity.Name;
}

<body>
    <div class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand" style="flex: 1">CinemaProject</div>
            <div class="navbar-menu" style="flex: 5">
                <a class="navbar-menuItem" href="@Url.Action("Index", "Application")"><span class="material-symbols-rounded">videocam</span>Фильмы</a>
                <a class="navbar-menuItem" href="@Url.Action("Contacts", "Application")"><span class="material-symbols-rounded">contacts</span>Контакты</a>
            </div>
            @if (String.IsNullOrEmpty(user))
            {
                <div class="navbar-authorize" style="flex: 1">
                    <a class="navbar-menuItem" href="@Url.Action("Login", "Application")"><span class="material-symbols-rounded">login</span>Вход</a>
                    <a class="navbar-menuItem" href="@Url.Action("Register", "Application")"><span class="material-symbols-rounded">how_to_reg</span>Регистрация</a>
                </div>
            }
            else
            {
                <div class="navbar-authorize" style="flex: 1">
                    <a class="navbar-menuItem">@user</a>
                    <a class="navbar-menuItem" href="@Url.Action("Logout", "Application")"><span class="material-symbols-rounded">logout</span>Выйти</a>
                </div>
            }
        </div>
    </div>
    <div class="container application">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@splidejs/splide@4.0.1/dist/js/splide.min.js"></script>

    @await RenderSectionAsync("scripts", required: false)
</body>
</html>